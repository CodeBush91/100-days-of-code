//- cards

mixin card(title,content,action)
  .card.blue-grey.darken-1
    .card-content.white-text
        span.card-title= title 
        p= content
    .card-action
        a(href=action.url)= action.text

 
mixin image-card(imageUrl, data)
  .card
    .card-image
      img(src=imageUrl)
      span.card-title= data.title
    .card-content
      p= data.content
        
    .card-action
      a(href=data.link)= data.action
